<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table">

  <thead>
    <tr>
      <th>Title</th>
      <th>String</th>
      <th>Author</th>
      <th>Blof entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.string %></td>
        <td><%= post.author %></td>
        <td><%= post.blof_entry %></td>
        <td><%= link_to 'Show', post, class:   " btn btn-primary" %></td>

        <td><%= link_to 'Edit',  edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
